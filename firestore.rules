rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /usernames/{coolId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    match /images/{imageId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /feedbacks/{feedbackId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if false;
    }
    match /blockedIps/{ipKey} {
      allow read, write: if false;
    }
    match /reports/{reportId} {
      allow read, write: if false;
    }
    match /visits/{visitId} {
      allow create: if true;
      allow read: if request.auth != null && (
        resource.data.imageOwnerId == request.auth.uid ||
        resource.data.recipientId == request.auth.uid
      );
      allow update, delete: if false;
    }
    match /notifications/{notifId} {
      allow read: if request.auth != null && resource.data.recipientId == request.auth.uid;
      allow create: if false;
      allow update: if request.auth != null && resource.data.recipientId == request.auth.uid;
      allow delete: if false;
    }
  }
}
